@if (Show)
{
<div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); display: flex; flex-direction: column; align-items: center; z-index: 9999;">
<div style="width: 300px; margin-bottom: 1rem;">
<RadzenProgressBar Value="100"
ShowValue="false"
Mode="ProgressBarMode.Indeterminate"
Style="height: 6px; width: 100%;" />
</div>
<div style="text-align:center; font-weight: bold; color: #007bff;">
@Message
</div>
</div>
<div style="position: absolute; inset: 0; width: 100%; height: 100%; background-color: rgba(255, 255, 255, 0.6); z-index: 9998; "></div>
}
@code {
[Parameter] public bool Show { get; set; } = false;
[Parameter] public string Message { get; set; }
[Parameter] public int LoadingProgress { get; set; }
[Parameter] public bool ShowStatusWait { get; set; }
}
